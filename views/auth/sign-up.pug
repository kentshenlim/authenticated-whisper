extends ../layout/layout_for_auth

block content
    h1(class='form-title') Sign Up
    p(class='mb-4 text-center') Sign up with username and password â€” your credentials stay private
    form(action='/sign-up' method='post') 
        div(class='label-input-wrapper')
            label(for='username' class='form-label') Username
            input#username(type='text' name='username' placeholder='Enter your username' autocomplete='off' required value=(filled ? filled.username : '') class='form-input')
            if (errors && errors.username)
                p(class='text-sm text-warning')!= errors.username.msg
            div#tips-username(class='form-instruction')
                p Your username must contain
                ul(class='form-instruction-list')
                    li#check-char-count-username At least 6 characters 
                    li#check-space-username No spaces
        div(class='label-input-wrapper')
            label(for='password' class='form-label') Password
            input#password(type='password' name='password' placeholder='Enter your password' required value=(filled ? filled.password : '') class='form-input')
            if (errors && errors.password)
                p(class='text-sm text-warning')!= errors.password.msg
            div#tips-password(class='form-instruction') 
                p Your password must contain:
                ul(class='form-instruction-list')
                    li#check-char-count At least 8 characters
                    li#check-char-type At least 3 of the following:
                        ul(class='form-instruction-list')
                            li#check-lower Lower case letters (a-z)
                            li#check-upper Upper case letters (A-Z)
                            li#check-digit Digits (0-9)
                            li#check-special Special characters (e.g. !@#$%^&*)
        hr(class='my-3')
        p(class='text-sm text-center') By signing up, you agree to our terms of service and privacy policy.
        button(type='submit' class='mt-2 mb-2 text-white bg-violet-400 form-button hover:bg-violet-500') Sign Up
    p Already have an account? 
        a(href='/sign-in' class='text-link') Log in

    script(src='/javascripts/validateSignUp.js' defer)
