extends layout

block content
    section
        div
            div App Icon
            form(action='/sign-in' method='post') 
                label(for='username') Username
                input#username(type='text', name='password')
                label(for='password') Password
                input#password(type='password', name='password')
                button(type='submit') Sign in with password
            hr
            form(action='/sign-in/federated/google' method='post') 
                button(type='submit') Sign in with Google
            form(action='/sign-in/federated/facebook' method='post') 
                button(type='submit') Sign in with Facebook
            hr
            a(href='/sign-in/email') Email me a magic link
            p 
                a(href='/sign-up') Create an account
                |  to log in with username and password.

            